{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "tsup.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}